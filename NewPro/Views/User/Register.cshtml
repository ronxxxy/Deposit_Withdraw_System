@model NewPro.Models.User;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AppPro.cshtml";
}

<form asp-controller="User" asp-action="Register" method="post">
    <!--Home Section 0 Start-->
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <div class="d-flex justify-content-center mb-2">
                    <h2 class="heading_account">Create new Account</h2>
                </div>
                <div class="d-flex justify-content-center mb-4">
                    <h5 class="payment_method">Already Registered? <a asp-controller="User" asp-action="Login" class="text-decoration-none" style="color: #0767A3;">Log in here</a></h5>
                </div>
                <h5 class="payment_method">NAME</h5>
                <input type="text" asp-for="UserFullname"  class="form-control p-3 box_input_withdraw mb-4" placeholder="Jamal Khan" />
                <span asp-validation-for="UserFullname" class="text-danger"></span>

                <h5 class="payment_method">EMAIL</h5>
                <input type="email" asp-for="UserEmail"  class="form-control p-3 box_input_withdraw mb-4" placeholder="Jamal@gmail.com" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>

                <h5 class="payment_method">Phone Number</h5>
                <input type="text" asp-for="UserNumber"  class="form-control p-3 box_input_withdraw mb-4" placeholder="03002766883" />
                <span asp-validation-for="UserNumber" class="text-danger"></span>

                <h5 class="payment_method">WHATSAPP NO.</h5>
                <input type="text" asp-for="UserWhatsapp"  class="form-control p-3 box_input_withdraw mb-4" placeholder="+923002766883" />
                <span asp-validation-for="UserWhatsapp" class="text-danger"></span>

                <h5 class="payment_method">PASSWORD</h5>
                <input type="password" asp-for="UserPassword"  class="form-control p-3 box_input_withdraw" placeholder="****************" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>

            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
    <!--Home Section 0 End-->
    <!--Home Section 3 Start-->
    <div class="container mt-4 mb-4">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <div class="d-grid gap-2 m-4">
                    <button type="submit" class="btn p-3 transaction_button">Sign Up</button>
                </div>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
    <!--Home Section 3 End-->
</form>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

