@model NewPro.Models.User;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AppPro.cshtml";
}

<form asp-controller="User" asp-action="Login" method="post">
    <!--Home Section 0 Start-->
    <div class="container" style="margin-top: 130px;">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <div class="img_div mb-3">
                    <img src="~/lib/Assets/images/icon-logo.png" alt="" class="img-fluid" width="80px"/>
                </div>

                <div class="d-flex justify-content-center mb-0">
                    <h2 class="heading_account_login">Login</h2>
                </div>
                <div class="d-flex justify-content-center mb-4">
                    <h5 class="payment_method">Sign in to continue.</h5>
                </div>
                <h5 class="payment_method">Number or Email</h5>
                <input required class="form-control p-3 mb-4 box_input" placeholder="Jamal Khan" type="email" asp-for="UserEmail" name="UserEmail" />
                <h5 class="payment_method">PASSWORD</h5>
                <input required class="form-control p-3 box_input_withdraw" placeholder="****************" type="password" asp-for="UserPassword" name="UserPassword" />
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
    <!--Home Section 0 End-->
    <!--Home Section 3 Start-->
    <div class="container mt-4" style="margin-bottom: 100px;">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <div class="d-grid gap-2 m-4">
                    <button type="submit" class="btn p-3 transaction_button">Login</button>
                    <h5 class="payment_method mt-4 text-center">Forgot Password?.</h5>
                    <h5 class="heading_title text-center"><a asp-controller="User" asp-action="Register" class="nav-link">Sign Up</a></h5>
                </div>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
    <!--Home Section 3 End-->
</form>

@section Scripts {
    <script>
        var errorMessage = '@ViewBag.ErrorMessage';
        if (errorMessage) {
            alert(errorMessage);
        }
    </script>
}
